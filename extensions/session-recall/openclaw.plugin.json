{
  "id": "session-recall",
  "kind": "hook",
  "uiHints": {
    "enabled": {
      "label": "Enabled",
      "help": "Enable session recall context injection"
    },
    "maxResults": {
      "label": "Max Results",
      "help": "Maximum number of session snippets to inject (1-20)"
    },
    "minScore": {
      "label": "Minimum Score",
      "help": "Minimum relevance score (0-1)"
    },
    "agentId": {
      "label": "Agent ID",
      "help": "Agent ID to search sessions for",
      "advanced": true
    }
  },
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "enabled": {
        "type": "boolean",
        "default": true
      },
      "maxResults": {
        "type": "number",
        "minimum": 1,
        "maximum": 20,
        "default": 5
      },
      "minScore": {
        "type": "number",
        "minimum": 0,
        "maximum": 1,
        "default": 0.5
      },
      "minPromptLength": {
        "type": "number",
        "default": 10
      },
      "agentId": {
        "type": "string",
        "default": "main"
      }
    }
  }
}
